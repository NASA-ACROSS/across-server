{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run docker-compose up",
            "type": "docker-compose",
            "dockerCompose": {
                "up": {
                    "detached": true,
                    "build": true,
                },
                "files": [
                    "${workspaceFolder}/containers/docker-compose.local.yml"
                ]
            }
        },
        {
            "label": "Run db",
            "type": "docker-compose",
            "dockerCompose": {
                "up": {
                    "detached": true,
                    "build": true,
                    "services": [
                        "db"
                    ]
                },
                "files": [
                    "${workspaceFolder}/containers/docker-compose.local.yml"
                ]
            }
        }
    ]
}
