    "version": "0.2.0",
    "configurations": [
        {
            "name": "Uvicorn: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "preLaunchTask": "Run db",
            "envFile": "${workspaceFolder}/.env",
            "python": "${workspaceFolder}/.venv/bin/python",
            "pythonArgs": [
                "-Xfrozen_modules=off"
            ],
            "args": [
                "across_server.main:app",
                "--reload",
                "--host",
                "127.0.0.1",
                "--port",
                "8000"
            ],
            "jinja": true
        },
    ]
}