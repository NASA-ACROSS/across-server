{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "local: Start Server",
            "type": "debugpy",
            "request": "launch",
            "preLaunchTask": "Run db",
            "envFile": "${workspaceFolder}/.env",
            "python": "${workspaceFolder}/.venv/bin/python",
            "pythonArgs": [
                "-Xfrozen_modules=off"
            ],
            "module": "uvicorn",
            "args": [
                "across_server.main:app",
                "--reload",
                "--host",
                "127.0.0.1",
                "--port",
                "8000"
            ],
            "jinja": true
        },
        {
            "name": "dev: Start Server",
            "type": "debugpy",
            "request": "launch",
            "envFile": "${workspaceFolder}/.env",
            "python": "${workspaceFolder}/.venv/bin/python",
            "pythonArgs": [
                "-Xfrozen_modules=off"
            ],
            "env": {
                "APP_ENV": "dev",
                "AWS_PROFILE": "default-mfa",
                "ACROSS_DB_USER": "core_server"
            },
            "module": "uvicorn",
            "args": [
                "across_server.main:app",
                "--reload",
                "--host",
                "127.0.0.1",
                "--port",
                "8000"
            ],
            "jinja": true
        },
        {
            "name": "dev: Migrations",
            "type": "debugpy",
            "request": "launch",
            "envFile": "${workspaceFolder}/.env",
            "python": "${workspaceFolder}/.venv/bin/python",
            "pythonArgs": [
                "-Xfrozen_modules=off"
            ],
            "env": {
                "APP_ENV": "dev",
                "AWS_PROFILE": "default-mfa",
                "ACROSS_DB_USER": "core_server"
            },
            "module": "alembic",
            "args": [
                "upgrade",
                "head"
            ],
        },
    ]
}
